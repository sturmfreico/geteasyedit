---

<MainLayout title="Search Results">
  <main class="space-y-20">
    <div class="mx-auto max-w-(--breakpoint-xl) px-4 py-8 lg:px-6 lg:py-16">
      <a
        href="/articles"
        class="hover:text-primary my-4 inline-flex items-center font-medium text-black"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class="h-6 w-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 16l-4-4m0 0l4-4m-4 4h18"
          >
          </path>
        </svg>
        <span class="ml-1 text-lg font-bold">All Articles</span>
      </a>

      <br />
      <SearchForm />
      <br />
      <h2 class="mt-6 pb-3 text-2xl">Results For <strong>{query}</strong></h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {allBlogArticles.map((article) => <ArticleCard article={article} />)}
      </div>
    </div>
  </main>
</MainLayout>
