---
import MainLayout from "../layouts/MainLayout.astro";
import Sponsors from "../components/sections/Sponsors.astro";
import Features from "../components/sections/Features.astro";
---

<MainLayout title="About us">
  <main class="space-y-20">
    <div class="mx-auto max-w-(--breakpoint-xl) px-4 py-8 lg:px-3 lg:py-16">
      <div
        class="relative flex flex-col-reverse items-center md:flex-row"
        id="hero"
      >
        <div class="row items-center py-5 md:pt-10 md:pb-20">
          <div class="space-y-10 text-center">
            <h2 class="text-5xl leading-none font-medium md:text-6xl">
              We Navigate the <br /> digital landscape <br /> for success
            </h2>
            <p class="mt-6 mb-8 text-xl leading-7 font-normal sm:mb-12">
              Our Shopify app empowers businesses to grow and succeed online by
              providing customers with self-service order editing capabilities
              including order modifications, shipping updates, product swapping,
              and cancellations.
            </p>
            <a
              class="inline-flex justify-items-center gap-2.5 rounded-2xl border bg-zinc-900 px-9 py-5 text-white hover:bg-white hover:text-black md:justify-items-start"
              rel="noopener noreferrer"
              href="https://github.com/manulthanura/Positivus"
              target="_blank"
            >
              <h2 class="text-center text-xl leading-7 font-normal">
                Book a consultation
              </h2>
            </a>
          </div>
        </div>
      </div>
    </div>
    <Sponsors />
    <Features />
  </main>
</MainLayout>
