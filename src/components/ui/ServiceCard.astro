---
import { Image } from "astro:assets";
import Card from "./Card.astro";

import gob from "../../assets/icon6.svg";
import wob from "../../assets/icon7.svg";

/* 
1. Gray card with green title and green on black icon 
2. Green card with gray title and green on black icon
3. Black card with gray title and gray on black icon
*/

const { index, titleTop, subtitle, img, alt, link } = Astro.props;
---

<Card>
  <div
    class=`flex flex-col justify-between w-full h-full p-8 sm:p-14 rounded-base ${index === 1 ? 'bg-gray' : index === 2 ? 'bg-primary' : 'bg-dark text-gray'}`
  >
    <h3 class=`flex flex-col text-xl mb-4`>
      <span class=`w-fit ${index === 1 ? 'greenhead' : 'whitehead'}`>
        {titleTop}
      </span>
      {
        subtitle && (
          <span class="mt-3 inline-block text-sm text-gray-400">
            {subtitle}
          </span>
        )
      }
    </h3>
    <div class="flex justify-between">
      <div class="flex items-end">
        <a href={link} class="flex items-center gap-3.5">
          <Image src={index === 1 || index === 2 ? gob : wob} alt={alt} />
          <span class="hidden sm:block">Service Info</span>
        </a>
      </div>
      <picture class="max-h-40">
        <Image src={img} alt={alt} class="h-full w-full" />
      </picture>
    </div>
  </div>
</Card>
