---
import { Image } from "astro:assets";
import Section from "./Section.astro";

import HeroIlust from "../../assets/pics/hero.svg";
---

<Section id="home" className="pt-10">
  <div
    class="relative flex flex-col-reverse items-center md:flex-row"
    id="hero"
  >
    <div class="row items-center md:w-6/12">
      <div class="space-y-8 text-left">
        <div class="mb-4 flex justify-center md:justify-start">
          <span
            class="text-secondary bg-tag-green inline-flex items-center rounded-full px-3 py-1 text-sm font-medium"
          >
            ⚡ Save 80% on support tickets
          </span>
        </div>
        <h1
          class="text-center text-4xl leading-none font-bold text-gray-900 md:text-left md:text-6xl"
        >
          Stop drowning in <br />
          <span class="text-primary-darker">change my order</span>
          <br />
          requests
        </h1>
        <p
          class="mt-6 mb-8 text-center text-lg leading-relaxed font-normal text-gray-600 sm:mb-12 md:pr-12 md:text-left"
        >
          Let customers edit their own orders and save your team hours of
          support.
        </p>
        <div
          class="space-y-4 md:flex md:items-center md:space-y-0 md:space-x-4"
        >
          <div
            class="inline-flex w-full items-center justify-center md:w-auto md:justify-start"
          >
            <a
              href="https://apps.shopify.com/easyedit-order-editing"
              target="_blank"
              class="text-secondary bg-primary hover:bg-primary-darker rounded-xl px-8 py-5 text-center text-xl leading-7 font-normal shadow-lg duration-200 hover:scale-105 hover:shadow-xl"
            >
              Start Free Trial
            </a>
          </div>
          <div class="text-center md:text-left">
            <p
              class="flex justify-center gap-2 text-sm text-gray-500 md:justify-start"
            >
              <span class="font-semibold text-green-600">
                Free 14-day trial
              </span>
              <span>•</span>
              <span>Starting at $19 USD/month</span>
            </p>
          </div>
        </div>
        <div
          class="flex items-center justify-center space-x-6 pt-4 text-sm text-gray-500 md:justify-start"
        >
          <div class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-green-500"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
            <span>2-minute setup</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-green-500"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
            <span>Works with any theme</span>
          </div>
          <!-- <div class="flex items-center space-x-2">
            <svg
              class="h-5 w-5 text-green-500"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"></path>
            </svg>
            <span>No revenue share</span>
          </div> -->
        </div>
      </div>
    </div>
    <div
      class="mb-8 flex max-w-2xs items-center md:mb-0 md:w-6/12 md:max-w-max md:justify-end"
    >
      <Image
        src={HeroIlust}
        alt="Shopify Order Editing App Dashboard"
        loading="eager"
      />
    </div>
  </div>
</Section>
