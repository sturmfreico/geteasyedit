---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

import propImg from "../../assets/screens/hero.webp";
---

<Section className="pt-20 pb-0 lg:pt-28 lg:pb-20">
  <Card>
    <div
      class="lg:rounded-base relative flex overflow-hidden rounded-2xl bg-gray-100"
    >
      <Image
        src={propImg}
        alt="This is an illustration"
        class="min-h-[276px] w-full object-cover object-left"
      />
    </div>
  </Card>
</Section>
